<ul id="car-list"></ul>
@section scripts{

    <script type="text/javascript">

        $(function() {
            $.get("/api/cars").done(function(cars) {
                $.each(cars, function(i, car) {
                    var item=`<li>
                                    <strong>${car.make} ${car.model}</strong>
                                    (${car.price})
                                </li>`

                    $('#car-list').append(item)
                })
            })
        })
    </script>
}